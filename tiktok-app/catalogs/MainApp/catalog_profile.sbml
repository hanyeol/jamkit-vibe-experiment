=begin profile-header
=object avatar: image, image=$load-user-info().avatar
=object username: label, text=$load-user-info().username
=object bio: label, text=$load-user-info().bio

=begin stats
=begin followers-stat
=object followers-count: label, text=$load-user-info().followers
=object followers-label: label, text=Followers
=end followers-stat

=begin following-stat
=object following-count: label, text=$load-user-info().following
=object following-label: label, text=Following
=end following-stat

=begin likes-stat
=object likes-count: label, text=$load-user-info().likes
=object likes-label: label, text=Likes
=end likes-stat
=end stats

=begin action-buttons
=object edit-profile-btn: button, label=Edit Profile
=object settings-btn: button, label=Settings
=end action-buttons
=end profile-header

=begin tabs
=object videos-tab: button, label=Videos
=object liked-tab: button, label=Liked
=end tabs

=begin video-grid
=begin section: user-videos
=begin data
$load-user-videos()
=end data

=begin row
=begin cell
=begin video-item
=object video-thumb: image, image=$data.thumbnail
=begin view-overlay
=object view-count: label, text=$data.views
=end view-overlay
=end video-item
=end cell
=end row
=end section
=end video-grid

=end catalog
